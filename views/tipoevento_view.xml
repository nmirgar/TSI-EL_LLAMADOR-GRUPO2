<odoo>
    <record id="llamador_tipoevento_form_view" model="ir.ui.view">
        <field name="name">llamador.tipoevento.form</field>
        <field name="model">llamador.tipoevento</field>
        <field name="arch" type="xml">
            <form string="Tipos de Eventos">
                <sheet layout="auto">
                    <group>
                        <field name="sTipo"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="llamador_tipoevento_tree_view" model="ir.ui.view">
        <field name="name">llamador.tipoevento.tree</field>
        <field name="model">llamador.tipoevento</field>
        <field name="arch" type="xml">
            <tree string="Tipos de Eventos">
                <field name="sTipo"/>
            </tree>
        </field>
    </record>

    <record id="tipoevento_list_action" model="ir.actions.act_window">
        <field name="name">Tipos de Eventos Llamador</field>
        <field name="res_model">llamador.tipoevento</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Crea el tipo de evento</p>
        </field>
    </record>
</odoo>
