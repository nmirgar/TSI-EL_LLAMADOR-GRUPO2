<odoo>

  <!-- Vista para mostrar el mapa con las ubicaciones de los almacenes -->
  <record id="llamador_almacen_map_view" model="ir.ui.view">
    <field name="name">llamador.almacen.map</field>
    <field name="model">llamador.almacen</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="geo_localizacion_almacen" widget="map" options="{'disable_linking': true}" string="Mapa de Almacenes"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>


  <record id="almacen_map_action" model="ir.actions.act_window">
    <field name="name">Mapa de Almacenes</field>
    <field name="res_model">llamador.almacen</field>
    <field name="view_mode">map</field>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">No hay almacenes para mostrar en el mapa </p>
    </field>
  </record>

</odoo>
